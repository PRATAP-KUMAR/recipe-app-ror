<div class=title>
  <h3>Welcome to Recipe App</h3>
</div>

<div class=form-holder>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, class: "area", placeholder: "Email", autofocus: true, autocomplete: "email"%>
  </div>

  <div class="field">
    <%= f.password_field :password, class: "area", placeholder: "Password", autocomplete: "current-password" %>
  </div>

  <div class="field">
    <%= f.submit "Log in", class: 'login-btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>