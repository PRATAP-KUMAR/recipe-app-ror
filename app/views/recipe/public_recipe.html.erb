<div class="publicListContainer">
  <h1 class="publicRecipeTitle">
    Public Recipies
  </h1>
  <% @recipies.each do |recipe|%>
    <div class="recipeCard">
      <div class="recipeCardLeft">
        <p class="recipeName">
          <%= recipe.name %>
        </p>
        <p class="recipeAuthor">
          <%= "By: #{recipe.user.email}" %>
        </p>
      </div>
      <div class="recipeCardRight">
        <p class="totalFoodItems">
            <p>
            Total food Items
          <%= recipe.recipe_foods.all.length %>
            </p>
        </p>
        <p class="totolPrice">
        <p>
            Total Price: $
          <%= @totalPrice%>
            </p>
        </p>
      </div>
      <div>
      <% end %>
    </div>
