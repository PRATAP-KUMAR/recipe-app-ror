Create Recipe

<%= form_with model: @recipe, url: user_recipe_index_path(@user), local: true do |f| %>
<ul>
    <%= f.text_field :name, placeholder: 'Name' %>
    <%= f.text_field :preparation_time, placeholder: 'Preparation Time - Enter time in minutes' %>
    <%= f.text_field :cooking_time, placeholder: 'Cooking Time - Enter time in minutes' %>
    <%= f.text_field :description, placeholder: 'Description' %>
    <%= f.submit 'Submit' %>
</ul>
<% end %>
